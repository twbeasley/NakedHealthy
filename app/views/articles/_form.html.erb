<%= form_for(@article) do |f| %>

  <%= render 'shared/error_message' %>
  <%= f.collection_select(:category_id, Category.all, :id, :name,{prompt: "Choose a Category"}) %> <br>
  <%= f.label :Name %> <br>
  <%= f.text_field :name, placeholder: "enter the post title here" %> <br>
  <%= f.label :description %> <br>
  <%= f.text_area :description, placeholder: "Paste the article here" %> <br>
  <%= f.label :photo %> <br>
  <%= f.file_field :photo %> <br>
  <%= f.submit %>
    

<% end %>